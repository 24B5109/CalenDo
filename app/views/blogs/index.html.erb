
<p id="notice"><%= notice %></p>
<div class="remind">
 <% if current_user.kaisuu == 1 %>
  <h1>前日の投稿がされていません！
  今日投稿してみませんか？</h1>
 <% else %>
  <p>現在の連続投稿回数 <%= current_user.kaisuu %>回</p>
 <% end %>
</div>

<div class="index">
 <table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td class="blog-title"><%= blog.title %></td>
        <td class="blog-content"><%= blog.content %></td>
        <td><%= link_to '投稿を見る', blog, class: "btn-link" %></td>
        <td><%= link_to '投稿を編集する', edit_blog_path(blog.id), class: "btn-link" %></td>
        <td><%= button_to 'Destroy', blog_path(blog.id), 
        method: :delete, 
        data: { confirm: 'Are you sure?' },
        class: "btn-link" %></td>
        <td> <% if blog.image.attached? %>
            <%= image_tag blog.image, size: '250x200'%>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
 </table>

 <div class="goal">
   <h1>目標</h1>

   <div class="mo">
     <% @tweets.each do |t| %>
      <p><%= t.goal %></p>
      <%= link_to "編集する", edit_tweet_path(t.id), class: "btn-edit" %>
     <% end %>
   </div>
 </div>
</div>

<br>


<%= link_to '日記をかく', new_blog_path, class: "btn-link" %>

<%= month_calendar events: @blogs,attribute: :start_time, start_date_param: :start_date do |date, blogs| %>
  <%= date.day %>

  <% blogs.each do |blog| %>
    <div>
      <%= link_to blog.title, blog %>
    </div>
  <% end %>
<% end %>
<%= form_tag({controller:"blogs",action:"index"}, method: :get) do %>
    <% Tag.all.each do |t| %>
        <li><%= check_box :tag_ids, t.name %><%= t.name %></li>
    <% end %>
<% end %>

<div class="form2">
    <%= submit_tag '検索' %>
    <%= form_tag({controller:"blogs",action:"index"}, method: :get) do %>
      <%= text_field_tag :tag %>
     <%= submit_tag 'タグを追加' %>
    <% end %>
</div>

