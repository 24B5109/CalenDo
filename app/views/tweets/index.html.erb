<h1>目標一覧</h1>
<%= link_to "新規目標設定", new_tweet_path, class: "btn-edit" %>
<%= link_to 'カレンダーに戻る', blogs_path, class: "btn-edit" %>
<div class="tweets-container">
  <% @tweets.each do |t| %>
    <div class="tweet">
      <%= t.goal %>
    </div>
    <%= link_to "編集する", edit_tweet_path(t.id), class: "btn-edit" %>
    <%= button_to "削除する", tweet_path(t.id), method: :delete, class: "btn-delete" %>

  <% end %>
</div>